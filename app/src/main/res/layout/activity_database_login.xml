<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/loginDataTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <!-- Tambahkan EditText dan Button untuk menghapus username -->
    <EditText
        android:id="@+id/etUsernameToDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Username" />

    <Button
        android:id="@+id/btnDeleteByUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hapus Berdasarkan Username"
        android:onClick="deleteByUsername" />

</LinearLayout>
